<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="ssi_purchase_order_views_inherit" model="ir.ui.view">
      <field name="name">ssi.purchase.order.views.inherit</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">
         <xpath expr="//field[@name='partner_ref']" position="after">
            <field name="product_packaging_id" />
         </xpath>
         <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='products']/field[@name='order_line']/tree[1]/field[@name='name']" position="after">
            <field name="product_packaging_id" />
         </xpath>
      </field>
   </record>
</odoo>