<odoo>
<record id="wizard_pool_payment_form" model="ir.ui.view">
   <field name="name">wizard_pool_payment_form</field>
   <field name="model">pool.payment</field>
   <field name="type">form</field>
   <field name="arch" type="xml">
       <form>
           <sheet>
           <group>
               <group>
                   <field name="artist_id"/>
                   <field name="licensor_id"/>
                   <field name="available_balance"/>
                   <field name="advance_payment" attrs="{'invisible': [('advance_payment', '==', '0.0')]}"/>
               </group>
               <group>
                   <field name="balance_to_pay"/>
                   <field name="journal_balance"/>
               </group>
           </group>
           </sheet>
           <footer>
               <button name="make_payment" string="Make Payment" type="object" class="oe_highlight"/>
               <button string="Cancel" class="btn btn-default" special="cancel"/>
           </footer>
       </form>
   </field>
</record>
</odoo>