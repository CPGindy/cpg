<odoo>
    <record id="wizard_pool_payment_form" model="ir.ui.view">
       <field name="name">wizard_pool_payment_form</field>
       <field name="model">pool.payment</field>
       <field name="type">form</field>
       <field name="arch" type="xml">
           <form>
               <sheet>
                   <group>
                       <group>
                           <field name="licensor_id"/>
                           <field name="advance_payment" attrs="{'invisible': [('advance_payment', '==', 0)]}"/>
                       </group>
                       <group>
                           <field name="journal_balance"/>
                       </group>
                   </group>
                   <group>
                       <field name="pool_payment_line_ids" nolabel="1" view_mode="tree">
                           <tree editable="bottom" create="false">
                               <field name="artist_id" readonly="1"/>
                               <field name="available_balance" readonly="1"/>
                               <field name="balance_to_pay" sum="Journal Balance" widget="monetary" readonly="1"/>
                           </tree>
                       </field>
                   </group>
               </sheet>
               <footer>
                   <button name="make_payment" string="Make Payment" type="object" class="oe_highlight"/>
                   <button string="Cancel" class="btn btn-secondary" special="cancel"/>
               </footer>
           </form>
       </field>
    </record>
</odoo>