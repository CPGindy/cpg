<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
       
      <record model="ir.ui.view" id="license_view_list">
         <field name="name">license.view.list</field>
         <field name="model">license.license</field>
         <field name="arch" type="xml">
            <tree>
               <field name="contract_id" />
               <field name="type" />
               <field name="start_date" />
               <field name="end_date" />
               <field name="artist_id" />
               <field name="licensor_id" />
               <field name="license_product_id" />
            </tree>
         </field>
      </record>
       
      <record id="license_view_form" model="ir.ui.view">
         <field name="name">license.view.form</field>
         <field name="model">license.license</field>
         <field name="arch" type="xml">
            <form string="Contract">
               <sheet>
                  <div class="oe_title">
                     <h1>
                        <field name="contract_id" readonly="1" />
                     </h1>
                  </div>
                  <group>
                     <group>
                        <field name="type" />
                        <field name="start_date" />
                        <field name="end_date" />
                     </group>
                     <group>
                        <field name="artist_id" />
                        <field name="licensor_id" />
                     </group>
                  </group>
                  <notebook>
                     <page string="License Items">
                        <group>
                           <field name="license_item" nolabel="1" context="{'default_license_id': active_id, 'search_default_license_id': active_id}">
                              <tree delete="false">
                                 <field name="art_license_number" />
                                 <field name="territory" />
                                 <field name="end_date" />
                                 <field name="sell_off_date" />
                                 <field name="license_id" optional="hide"/>
                                 <button name="unlink_license_item" confirm="Are you sure you want to unlink this line from above contract?" type="object" class="fa fa-trash-o"/>
                              </tree>
                              <form string="License">
                                    <header>
                                       <button name="create_royalty" type="object" class="btn-primary" string="Create Royalty"/>
                                    </header>
                                    <sheet>
                                       <div class="oe_button_box" name="button_box">
                                       <button class="oe_stat_button" icon="fa-dollar" type="object" name="action_view_royalty">
                                             <field name="royalty_count" string="Royalty" widget="statinfo"/>
                                       </button>
                                       </div>
                                       <div class="oe_title">
                                          <h1>
                                             <field name="art_license_number"/>
                                          </h1>
                                       </div>
                                       <group>
                                          <group>
                                             <field name="description"/>
                                             <field name="end_date" />
                                             <field name="territory" />
                                             <field name="license_type" />
                                          </group>
                                          <group>
                                             <field name="sell_off_date" />
                                             <field name="license_status" />
                                             <field name="licensed_for" widget="many2many_tags">
                                                <tree string="license.categ">
                                                   <field name="name" />
                                                </tree>
                                             </field>
                                             <field name="licensor_ref"/>
                                          </group>
                                       </group>
                                       <notebook>
                                          <!-- <page string="Products">
                                             <group>
                                                <field name="license_product_line">
                                                   <tree editable="bottom">
                                                      <field name="product_id" />
                                                      <field name="royalty_rate" widget="percentage" />
                                                   </tree>
                                                </field>
                                             </group>
                                          </page> -->
                                          <page string="Details">
                                             <group>
                                                <group>
                                                <field name="reference_image" options="{&quot;size&quot;:[0,90]}" widget="image" />
                                                
                                                </group>
                                                <group>
                                                <field name="reference_image_interior" options="{&quot;size&quot;:[0,90]}" widget="image" />
                                                <field name="reference_image_front" options="{&quot;size&quot;:[0,90]}" widget="image" />
                                                </group>
                                             </group>
                                             <field name="note" />
                                          </page>
                                          <!-- <page string="Item Pool">
                                             <group>
                                                <field name="item_pool_id" nolabel="1">
                                                   <tree editable="bottom">
                                                         <field name="pool_id"/>
                                                         <field name="date"/>
                                                         <field name="reference"/>
                                                         <field name="value_type"/>
                                                         <field name="value"/>
                                                         <field name="first_sale_date"/>
                                                         <field name="is_active"/>
                                                   </tree>
                                                </field>
                                             </group>
                                          </page> -->
                                       </notebook>
                                    </sheet>
                                    </form>
                           </field>
                        </group>
                     </page>
                  </notebook>
               </sheet>
               <div class="oe_chatter">
                  <field name="message_follower_ids" />
                  <field name="activity_ids" />
                  <field name="message_ids" />
               </div>
            </form>
         </field>
      </record>
       
      <!-- actions opening views on models -->
      <record model="ir.actions.act_window" id="ssi_royalty.action_window_open_license">
         <field name="name">Contracts</field>
         <field name="res_model">license.license</field>
         <field name="view_mode">tree,form</field>
      </record>
      <record model="ir.actions.server" id="ssi_royalty.action_server">
         <field name="name">ssi_royalty server</field>
         <field name="model_id" ref="model_license_license" />
         <field name="state">code</field>
         <field name="code">action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }</field>
      </record>
       
      <record id="license_view_search" model="ir.ui.view">
         <field name="name">license.view.search</field>
         <field name="model">license.license</field>
         <field name="arch" type="xml">
            <search string="Search Contracts">
               <field name="artist_id" />
               <field name="licensor_id" />
               <field name="license_item" string="Art License Number" filter_domain="[('license_item.art_license_number', 'ilike', self)]"/>
               <field name="contract_id" />
               <group expand="0" string="Group By">
                  <filter string="Licensor" name="licensor_id" context="{'group_by': 'licensor_id'}" />
                  <filter string="Artist" name="artist_id" context="{'group_by': 'artist_id'}" />
               </group>
            </search>
         </field>
      </record>
       
      <!-- menu categories -->
      <menuitem name="License" id="ssi_royalty.license" parent="ssi_royalty.menu_root" sequence="1" />
      <!-- actions -->
      <menuitem name="Contracts" id="ssi_royalty.license_menu" parent="ssi_royalty.license" action="ssi_royalty.action_window_open_license" />
       
   </data>
</odoo>