<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="ssi_product_view" model="ir.ui.view">
      <field name="name">ssi.product.view</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view" />
      <field name="priority">100</field>
      <field name="arch" type="xml">
         <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
            <page string="License Product">
               <group>
                  <field name="license_product">
                     <tree editable="bottom">
                        <field name="license_item_id" />
                        <field name="artist_id" />
                        <field name="product_id" attrs="{}" invisible="1" />
                        <field name="royalty_rate" widget="percentage" />
                     </tree>
                  </field>
               </group>
            </page>
         </xpath>
      </field>
   </record>
</odoo>