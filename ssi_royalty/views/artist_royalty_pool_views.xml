<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       
        <record model="ir.ui.view" id="ssi_royalty_pool_view_list">
            <field name="name">ssi_royalty.pool.view.list</field>
            <field name="model">ssi_royalty.pool</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="artist_id"/>
                    <field name="licensor_id"/>
                    <field name="balance" />
                </tree>
            </field>
        </record>
       
        <record id="ssi_royalty_pool_view_form" model="ir.ui.view">
            <field name="name">ssi_royalty.pool.view.form</field>
            <field name="model">ssi_royalty.pool</field>
            <field name="arch" type="xml">
                <form string="License Product">
                    <sheet>
                        <group>
                            <group>
                                <field name="artist_id"/>
                                <field name="licensor_id"/>
                            </group>
                            <group>
                                <field name="balance"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Artiist Pool Lines">
                                <group>
                                    <field name="pool_line" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="date"/>
                                            <field name="memo"/>
                                            <field name="value_type"/>
                                            <field name="value"/>
                                            <field name="pool_value"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
       
        <record id="ssi_royalty_pool_search" model="ir.ui.view">
            <field name="name">ssi.royalty.pool.search</field>
            <field name="model">ssi_royalty.pool</field>
            <field name="arch" type="xml">
                <search string="Search Royalty Pool">
                    <field name="artist_id"/>
                    <field name="licensor_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Artist" name="artist_id" context="{'group_by': 'artist_id'}"/>
                        <filter string="Licensor" name="licensor_id" context="{'group_by': 'licensor_id'}"/>
                    </group>
                </search>
            </field>
        </record>
       
        <record model="ir.actions.act_window" id="ssi_royalty.action_window_open_royalty_pool">
            <field name="name">Artist Pool</field>
            <field name="res_model">ssi_royalty.pool</field>
            <field name="view_mode">tree,form</field>
        </record>
       
        <menuitem name="Artist Pool" id="ssi_royalty.royalty_pool_menu" parent="ssi_royalty.royalty" action="ssi_royalty.action_window_open_royalty_pool" />
       
    </data>
</odoo>
