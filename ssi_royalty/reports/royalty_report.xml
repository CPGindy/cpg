<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Quarterly Royalty Report -->
    <!-- <report
        id="quarterly_royalty_report_pdf"
        model="royalty.report.pdf"
        string="Quarterly Royalty Report"
        report_type="qweb-pdf"
        name="ssi_royalty.quarterly_royalty_report"
        file="ssi_royalty.quarterly_royalty_report"
        print_report_name="'Quarterly_Royalty_Report'"
    /> -->

    <record id="royalty_report_pdf" model="ir.actions.report">
        <field name="name">Royalty Report</field>
        <field name="model">ssi_royalty.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ssi_royalty.royalty_report</field>
        <field name="report_file">ssi_royalty.royalty_report</field>
        <field name="print_report_name">'Royalty Report - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_ssi_royalty_report"/>
        <field name="binding_type">report</field>
    </record>

    <template id="royalty_report" name="PDF Royalty Report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="doc.env.company"/>
                <t t-call="ssi_royalty.royalty_report_print"/>
            </t>
        </t>
    </template>

    <template id="royalty_report_print">
        <t t-call="web.external_layout">
            <div class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <t t-set="artists" t-value="set([line.artist_id for line in doc.royalty_line_id])"/>
            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span t-field="doc.licensor_id.name"/>
                </h2>
                <h6>
                    <span t-field="doc.name"/>
                </h6>

                <t t-foreach="artists" t-as="artist">
                    <t t-set="lines" t-value="[line for line in doc.royalty_line_id if line.artist_id.id == artist.id]"/>
                    <t t-set="unique_products" t-value="set([line.license_product_id.id for line in lines])"/>
                    <div class="container row" id="details"  style="margin-bottom: 20px; margin-top: 80px;">
                        <h4 t-esc="artist.name"/>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 10%;">Art</th>
                                <th scope="col" style="width: 20%;">Product</th>
                                <th scope="col" style="width: 10%;">Licensor Art ID</th>
                                <th scope="col" style="width: 10%;">Sales</th>
                                <th scope="col" style="width: 10%;">Royalty %</th>
                                <th scope="col" style="width: 10%;">Royalty $</th>
                                <!-- <th scope="col" style="width: 10%;">Less Adv</th>
                                <th scope="col" style="width: 10%;">Adv Paid Dt</th> -->
                                <th scope="col" style="width: 10%;" class="text-right">Net</th>
                            </tr>
                        </thead>
                        <tbody class="">
                            <t t-foreach="unique_products" t-as="product">
                                <t t-set="line" t-value="[l for l in lines if l.license_product_id.id == product][0]"/>
                                <tr>
                                    <td>
                                        <span t-field="line.licensed_item"/>
                                    </td>
                                    <td>
                                        <span t-field="line.license_product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.licensed_item.licensor_ref"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <span>$</span><span t-esc="'{:.2f}'.format(sum([l.item_value for l in lines if l.license_product_id.id == product]))"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <span t-esc="round(line.royalty_rate * 100, 2)"/><span>%</span>
                                    </td>
                                    <td style="text-align: right;">
                                        <span>$</span><span t-esc="'{:.2f}'.format(sum([l.royalty_value for l in lines if l.license_product_id.id == product]))"/>
                                    </td>
                                    <!-- <td>
                                        Pool Value (not sure how this is to be calculated yet)
                                    </td>
                                    <td>
                                        Adv Paid Dt (not sure what this is yet)
                                    </td> -->
                                    <td style="text-align: right;">
                                        <!-- Subtotal equals royalty amount for now -->
                                        <span>$</span><span t-esc="'{:.2f}'.format(sum([l.royalty_value for l in lines if l.license_product_id.id == product]))"/>
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <td name="td_amount_subtotals" colspan="3" style="border-top-color: black;"><strong>Subtotals</strong></td>
                                <td name="td_amount_subtotal_sales" colspan="1" style="border-top-color: black;" class="text-right">
                                    <span>$</span><span t-esc="'{:.2f}'.format(sum([l.item_value for l in lines]))"/>
                                </td>
                                <td colspan="1" style="border-top-color: black; border-right: none; border-left: none; border-bottom: none;"/>
                                <td name="td_amount_subtotal_royalty" colspan="1" style="border-top-color: black;" class="text-right">
                                    <span>$</span><span t-esc="'{:.2f}'.format(sum([l.royalty_value for l in lines]))"/>
                                </td>
                                <td name="td_amount_subtotal" colspan="1" class="text-right" style="border-top-color: black;">
                                    <span>$</span><span t-esc="'{:.2f}'.format(sum([l.royalty_value for l in lines]))"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border-right: none; border-left: none; border-bottom: none;"/>
                                <td name="td_amount_total_label" colspan="2"><strong>Less Pool Value</strong></td>
                                <td name="td_amount_total" colspan="2" class="text-right text-danger">
                                    <span>- $</span><span t-esc="'{:.2f}'.format(doc.sudo().env['ssi_royalty.pool'].search([('artist_id', '=', artist.id)], limit=1).balance)"/>
                                </td>
                            </tr>
                            <tr>
                                <t t-set="total" t-value="sum([l.royalty_value for l in lines]) - doc.sudo().env['ssi_royalty.pool'].search([('artist_id', '=', artist.id)], limit=1).balance"/>
                                <td colspan="3" style="border: none;"/>
                                <td name="td_amount_total_label" colspan="2"><strong>Total</strong></td>
                                <td name="td_amount_total" colspan="2" class="text-right">
                                    <span>$</span><span t-esc="'{:.2f}'.format(total if total > 0 else 0)"/>
                                </td>
                            </tr>
                            <tr>
                                <t t-set="remaining" t-value="doc.sudo().env['ssi_royalty.pool'].search([('artist_id', '=', artist.id)], limit=1).balance - sum([l.royalty_value for l in lines])"/>
                                <td colspan="3" style="border: none;"/>
                                <td name="td_amount_total_label" colspan="2"><strong>Pool Balance</strong></td>
                                <td name="td_amount_total" colspan="2" class="text-right">
                                    <span>$</span><span t-esc="'{:.2f}'.format(remaining if remaining > 0 else 0)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>
</odoo>
